{
    "compilerOptions": {
      "target": "ES6",                 
      "module": "CommonJS",             
      "rootDir": "src",                 
      "outDir": "dist",                 
      "strict": true,                    
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,           
      "skipLibCheck": true,              
      "forceConsistentCasingInFileNames": true 
    },
    "include": ["src"],                 
    "exclude": ["node_modules", "dist"]
  }
  